    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to Edge",
            "port": 9222,
            "request": "attach",
            "type": "msedge",
            "webRoot": "${workspaceFolder}",
            
        },
        {
            "type": "firefox",
            "request": "launch",
            "name": "Launch Firefox",
            "url": "${workspaceFolder}/index.html",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "tsc: watch - tsconfig.debug.json",
            "timeout": 5,
            "reAttach": true,
            // "tmpDir": "/home/hamzah/Documents/temp"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "url": "file:///E:/print/Documents/git/bsts/index.html",
            // "preLaunchTask": "tsc: build - tsconfig.debug.json",
            "preLaunchTask": "tsc: watch - tsconfig.debug.json",
            "webRoot": "${workspaceFolder}",
            "runtimeArgs": ["--disable-web-security"]

        },
    ]
}